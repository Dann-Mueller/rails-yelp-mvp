<h1>Add a New Restaurant</h1>
<%= simple_form_for @restaurant do |f| %>
  <div class="mb-3">
    <%= f.input :name, label: "Restaurant Name" %>
  </div>
  <div class="mb-3">
    <%= f.input :address, label: "Address" %>
  </div>
  <div class="mb-3">
    <%= f.input :phone_number, label: "Phone Number" %>
  </div>
  <div class="mb-3">
    <%= f.input :category, label: "Category", collection: ["chinese", "italian", "japanese", "french", "belgian"], prompt: "Select a category" %>
  </div>
  <%= f.submit "Create Restaurant", class: "btn btn-primary" %>
<% end %>
<%= link_to 'Back to Restaurant List', restaurants_path, class: "btn btn-secondary mt-3" %>




