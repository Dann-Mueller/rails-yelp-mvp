<h1>All Restaurants</h1>
<%= link_to 'Add a New Restaurant', new_restaurant_path, class: "btn btn-primary mb-3" %>
<div class="row">
  <% @restaurants.each do |restaurant| %>
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name %></h5>
          <p class="card-text"><strong>Address:</strong> <%= restaurant.address %></p>
          <p class="card-text"><strong>Phone:</strong> <%= restaurant.phone_number %></p>
          <p class="card-text"><strong>Category:</strong> <%= restaurant.category.capitalize %></p>
          <%= link_to 'View Details', restaurant_path(restaurant), class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
